<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">
      <%= @post.title %>
    </h5>
    <p class="card-text">
      <%= @post.content %>
    </p>
  </div>
  <h5>
    <%= link_to "edit", [:edit, @post] %> |
    <%= link_to "delete", post_path(@post), method: :delete %>
  </h5>
</div>
