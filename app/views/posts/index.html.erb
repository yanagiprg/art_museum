<%= @posts.each do |post|%>
  <div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to post.title, post_path(post) %>
      </h5>
      <p class="card-text">
        <%= link_to post.content, post_path(post) %>
      </p>
    </div>
  </div>
<% end %>
